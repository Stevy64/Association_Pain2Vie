                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0 7 0 0">
                                            <Label FontWeight="DemiBold" Margin="10 0 0 0">Quantité :</Label>
                                            <ComboBox Name="QLegumes" Text="0" Height="30" Width="40" Margin="0,0,0,10" Padding="3" BorderBrush="DarkBlue" Opacity="0.8" BorderThickness="3" FontWeight="DemiBold" Foreground="DarkBlue" IsEditable="True">
